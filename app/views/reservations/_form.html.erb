
<div class="p-4 bg-white border border-2 rounded ">
<%= form_with(model: reservation, local: true, class: "reservation-form") do |form| %>
  <% if reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <h3 class="mb-4 ">Reservation Information</h3>

  <div class="mb-6 ">
    <%= form.label :name, class: "form-label m-1" %>
    <%= form.text_field :name, class: "input form-control bg-light m-1" %>
  </div>

  <div class="mb-6">
    <%= form.label :start_time, class: "form-label m-1" %>
    <div class="d-flex justify-content-evenly align-items-center">
      <%= form.datetime_select :start_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "form-select py-1 px-1 m-1 bg-light" } %>
    </div>
  </div>

  <div class="field">
    <%= form.label :end_time, class: "form-label m-1" %>
    <div class="d-flex justify-content-evenly align-items-center">
      <%= form.datetime_select :end_time, { start_day: Date.today, start_year: Date.today.year, minute_step: 15 }, { class: "form-select py-1 px-1 m-1 bg-light" } %>
    </div>
  </div>

  <hr class="border" />
  <div class="">
    <div >
      <%= form.label :kayak, class: "form-label m-1"  %><br>
        <%= form.collection_select(:kayak_ids, Kayak.all, :id, :description,  {class: "form-control bg-light"}, { multiple: true }) %><br>
    </div>
    <div class="field">
      <%= form.label :location, class: "form-label m-1"  %><br />
      <%= form.select :location, Reservation::LOCATION_OPTIONS, {}, class: "form-control bg-light"  %>
    </div>

  


  </div>
<div class="d-flex justify-content-end mt-4" >

  <%= form.submit class: "btn btn-outline-dark btn-sm" %>
</div>
<% end %>
</div>
